[code]
    editor = vim
    pager = less
[diff]
    tool = vimdiff
    submodule = log
[user]
    email = carey@cmetcalfe.ca
    name = Carey Metcalfe
[color]
    ui = true
    interactive = true
[color "status"]
    added = green bold
    changed = red bold
    untracked = cyan
[color "branch"]
    current = green bold
    remote = red bold
[push]
    default = current
[alias]
    plog = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    fix = !sh -c 'git commit -m \"fixup! `git rev-parse HEAD`\"' -
    amend = commit --amend --no-edit
    diffc = diff --cached
    checkoutr = checkout
[mergetool "gvimdiff3"]
    cmd = gvim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[mergetool "vimdiff3"]
    cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[merge]
    tool = gvimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
[rerere]
    enabled = 1
[rebase]
    autosquash = true
[pull]
    rebase = true
[status]
    submoduleSummary = true
